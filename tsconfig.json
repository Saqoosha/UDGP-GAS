{
    "compilerOptions": {
        "lib": ["esnext"],
        "experimentalDecorators": true,
        "target": "ES2020",
        "module": "none",
        "outFile": "./dist/bundle.js",
        "rootDir": "./src",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
